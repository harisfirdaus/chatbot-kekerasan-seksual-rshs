{
  "version": 2,
  "builds": [
    {
      "src": "project/api/*.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["project/api/**"]
      }
    },
    {
      "src": "project/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/project/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/project/$1"
    }
  ]
} 